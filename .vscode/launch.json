    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}"
        },
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 8080
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Open index.html",
            "file": "localhost/dashboard/portaltools/index.html"
        }
    ]
}